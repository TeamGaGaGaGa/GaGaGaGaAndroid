<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GaGaGaGaAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@color/main_black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="homeTagStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="strokeColor">@color/tag_stroke_grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbHorizontal">@color/thumb</item>
        <item name="android:scrollbarTrackHorizontal">@color/track</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageButton.size32">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

</resources>